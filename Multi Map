//JAVASCRIPT
function initialize() {
  var latlng = new google.maps.LatLng(43.518299, -79.877404);
  var latlng2 = new google.maps.LatLng(42.681868, -82.364502);
  var latlng3 = new google.maps.LatLng(43.758697,-79.43819);
  var latlng4 = new google.maps.LatLng(43.042516, -78.934021);
  
  var myOptions = {
    zoom: 10,
    center: latlng,
    disableDefaultUI: true,
    mapTypeId: google.maps.MapTypeId.ROADMAP
  };

  var myOptions2 = {
    zoom: 9,
    center: latlng2,
    disableDefaultUI: true,
    mapTypeId: google.maps.MapTypeId.ROADMAP
  };
  
  var myOptions3 = {
    zoom: 11,
    center: latlng3,
    disableDefaultUI: true,
    mapTypeId: google.maps.MapTypeId.ROADMAP
  };
  
  var myOptions4 = {
    zoom: 10,
    center: latlng4,
    disableDefaultUI: true,
    mapTypeId: google.maps.MapTypeId.ROADMAP
  };

  var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);

  var map2 = new google.maps.Map(document.getElementById("map_canvas_2"), myOptions2);
  
  var map3 = new google.maps.Map(document.getElementById("map_canvas_3"), myOptions3);
  
  var map4 = new google.maps.Map(document.getElementById("map_canvas_4"), myOptions4);

  var singleLatLng = {
    lat: 43.460902,
    lng: -80.135458
  };

  var singleLatLng2 = {
    lat: 43.674703,
    lng: -79.684999
  };
  
  var singleLatLng3 = {
    lat: 42.331427,
    lng: -83.045754
  };
  
  var singleLatLng4 = {
    lat: 42.889478, 
    lng: -78.888702
  };

  var image = {
    url: 'http://www.truckdriver.com/truckdriverimages/ProfileImages/201.jpg',
    scaledSize: new google.maps.Size(100, 28),
    origin: new google.maps.Point(0, 0),
    anchor: new google.maps.Point(10, -8)
  };

  var image2 = {
    url: 'http://www.truckdriver.com/truckdriverimages/ProfileImages/201.jpg',
    scaledSize: new google.maps.Size(100, 28),
    origin: new google.maps.Point(0, 0),
    anchor: new google.maps.Point(45, 10)
  };

  var myMarker = new google.maps.Marker({
    position: singleLatLng,
    map: map,
    icon: image,
    title: "Abf"
  });

  var myMarker2 = new google.maps.Marker({
    position: singleLatLng3,
    map: map2,
    icon: image2,
    title: "Det"
  });
  
  var myMarker3 = new google.maps.Marker({
    position: singleLatLng2,
    map: map3,
    icon: image2,
    title: "Miss"
  });

  var myMarker2 = new google.maps.Marker({
    position: singleLatLng2,
    map: map2,
    icon: image2,
    title: "Buf"
  });


  var trafficLayer = new google.maps.TrafficLayer();
  trafficLayer.setMap(map);
  var trafficLayer = new google.maps.TrafficLayer();
  trafficLayer.setMap(map2);
  var trafficLayer = new google.maps.TrafficLayer();
  trafficLayer.setMap(map3);
  var trafficLayer = new google.maps.TrafficLayer();
  trafficLayer.setMap(map4);

}


